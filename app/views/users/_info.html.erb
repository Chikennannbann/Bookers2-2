<%= image_tag user.get_profile_image, size: '100x100'%>
<table class='table'>
  <tr>
    <th>Name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<%= link_to edit_user_path(user.id), class: 'btn btn-block btn-outline-secondary mb-5' do %>
  <i class="fas fa-user-cog"></i>
<% end %>