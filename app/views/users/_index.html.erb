<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan='3'>Name</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |f| %>
      <tr>
        <td><%= image_tag f.get_profile_image, size: '70x70' %></td>
        <td><%= f.name %></td>
        <td>フォロー数:<%= f.followings.count %></td>
        <td>フォロワー数:<%= f.followers.count %></td>
        <td><%= render 'relationships/btn', user: f %></td>
        <td><%= link_to "Show", user_path(f.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>