<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <div class='row'>
        <h3>User Info</h3>
        <%= render 'users/info', user: current_user %>
      </div>
      <div class='row'>
        <h3>New book</h3>
        <%= render 'books/form', booknew: @booknew %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3>Books</h3>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
          <tr>
            <td>
              <%= link_to f.user do %>
                <%= image_tag f.user.get_profile_image, size: '70x70' %>
              <% end %>
            </td>
            <td><%= link_to f.title, book_path(f.id) %></td>
            <td><%= f.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>