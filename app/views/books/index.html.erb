<div class='container'>
  <div class='row'>
    <div class='col-3'>
      <div class='row'>
        <h3>User Info</h3>
        <table class='table'>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th></th>
          </tr>
        </table>
      </div>
      <div class='row'>
        <h3>New Book</h3>
        <%= form_with model: @booknew, url: books_path, method: :post do |f| %>
          <div class='form-group'>
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control book-title' %>
          </div>
          <div class='form-group'>
            <%= f.label :opinion %>
            <%= f.text_area :body, class: 'form-control book_body' %>
          </div>
          <div class='form-group'>
            <%= f.submit class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class='col-8 offset-1'>
      <h3>Books</h3>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
          <tr>
            <td>
              <%= link_to f.user do %>
                <%= image_tag f.user.get_profile_image, size: '50x50' %>
              <% end %>
            </td>
            <td><%= link_to f.title, book_path(f.id) %></td>
            <td><%= f.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>