<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th colspan="3">Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |f| %>
    <tr>
      <td>
        <%= link_to f.user do %>
          <%= image_tag f.user.get_profile_image, size: '70x70' %>
        <% end %>
      </td>
      <td><%= link_to f.title, book_path(f.id) %></td>
      <td><%= f.body %></td>
      <td class=<%= 'favorite-btn' + f.id.to_s %>>
        <%= render 'favorites/btn', book: f %>
      </td>
      <td><%= render 'book_comments/counter', book: f %></td>
    </tr>
    <% end %>
  </tbody>
</table>